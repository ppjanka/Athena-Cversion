#===============================================================================
# FILE: Makefile.in
#
# PURPOSE: Template for fftsrc/Makefile.  When 'configure' is run, a new
# Makefile will be created (overwriting the last) from this template.
#
# TO BY-PASS CONFIGURE: copy this file into Makefile, and edit by hand to set
#   the appropriate object files, compiler options, and library paths.
#
#-------------------  object files  --------------------------------------------
CORE_OBJ = factor.o \
           fft_2d.o \
           fft_3d.o \
           pack_2d.o \
           pack_3d.o \
           remap_2d.o \
           remap_3d.o

OBJ = $(CORE_OBJ)

#-------------------  macro definitions  ---------------------------------------

SRC = $(OBJ:.o=.c)

include ../Makeoptions

BLOCKINC =
BLOCKLIB =

#--------------------  implicit rules  -----------------------------------------

.c.o:
	${CC} ${CFLAGS} -c $<

#---------------------  targets  -----------------------------------------------

all:	compile

.PHONY: compile
compile: ${OBJ}
#	ar rcs libplimpton.a ${OBJ}

help:
	@echo This is the FFT Makefile
	@echo Type 'make compile' to generate FFT object files
	@echo Type 'make clean'   to remove '*.o' files
	@echo OBJ=$(OBJ)

.PHONY: clean
clean:
	rm -f *.o *.a Makedepend

depend: Makedepend

Makedepend:
ifeq ($(MACHINE),orangena)
	makedepend ${CFLAGS} ${SRC} > Makedepend
else
	${CC} -MM ${CFLAGS} ${SRC} > Makedepend
endif

# this forces a rebuild of all objects, if code re-configure'd

ifeq (@FFT_MODE@,USE_FFT)
ifeq (@MPI_MODE@,MPI_PARALLEL)
include Makedepend
endif
endif
